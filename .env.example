# CrownDesk V2 AI Service - Environment Variables

# Application
APP_NAME=CrownDesk AI Service
ENVIRONMENT=development
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM provider (openai, anthropic)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# Vector Database (Pinecone new SDK - no environment parameter needed)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_HOST=https://your-index.svc.your-region.pinecone.io
PINECONE_INDEX_NAME=crowndesk
# Note: Use text-embedding-3-large with 1024 dimensions, cosine metric

# OCR
TEXTRACT_ENABLED=true

# Database (for RAG metadata)
DATABASE_URL=postgresql://postgres:password@localhost:5432/crowndesk_dev

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=
